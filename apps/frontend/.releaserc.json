{
  "branches": ["release", { "name": "beta", "prerelease": true }, { "name": "alpha", "prerelease": true }],
  "plugins": [
    [
      {
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [{ "path": "./*.zip", "label": "frontend app distribution" }]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci] \n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ./scripts/inject_frontend_info.js ${nextRelease.version} && zip -r frontend.zip ./dist",
        "successCmd": "node ./scripts/dispatch_workflow.js ${branch.name} ${nextRelease.version} ${Date.now()}"
      }
    ]
  ]
}
