{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "body-max-line-length": [
      0,
      "always",
      "Infinity"
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "update",
        "fix",
        "refactor",
        "optimize",
        "style",
        "docs",
        "chore",
        "test",
        "perf",
        "revert"
      ]
    ],
    "header-max-length": [0, "always", 100],
    "header-case": [
      0,
      "never"
    ],
    "scope-enum": [
      2,
      "always",
      [
        "workspace",
        "website",
        "i18n",
        "frontend",
        "components",
        "image",
        "formatter",
        "utils",
        "annotation",
        "components-react",
        "video-react",
        "audio-react",
        "interface",
        "video-annotator-react",
        "audio-annotator-react",
        "image-annotator-react"
      ]
    ],
    "scope-empty": [
      2,
      "never"
    ]
  }
}
